[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[scripts]
build = "python setup.py sdist bdist_wheel"
deploy-pypi = "python -m twine upload --repository pypi dist/*"
deploy-testpypi = "python -m twine upload --repository testpypi dist/*"
document = "python -m pydoc -w scinet.core"
tests = "python -m unittest discover -v -s tests -p 'test_*.py'"

[dev-packages]
autopep8 = "*"
pylint = "*"
rope = "*"
twine = "*"

[requires]
python_version = "3.8"
